<AnchorPane id="AnchorPane" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.RoteadorController">
   <children>
      <TabPane layoutX="14.0" layoutY="11.0" prefHeight="375.0" prefWidth="566.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="Inserir Porta do Roteador">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox alignment="TOP_CENTER" layoutX="202.0" layoutY="73.0" prefHeight="200.0" prefWidth="163.0">
                           <children>
                              <TextField fx:id="campoPortaRoteador" onMouseClicked="#apagarTexto" text="Porta do Roteador" />
                              <Button fx:id="botaoInserirRoteador" mnemonicParsing="false" onAction="#inserirPortaRoteador" text="Inserir" />
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
          <Tab text="Adicionar Rota">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="337.0" prefWidth="551.0">
                     <children>
                        <VBox alignment="TOP_CENTER" layoutX="200.0" layoutY="60.0" prefHeight="229.0" prefWidth="215.0" spacing="10.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="175.0" AnchorPane.rightAnchor="175.0" AnchorPane.topAnchor="60.0">
                           <children>
                              <TextField fx:id="campoNumeroPorta" onMouseClicked="#apagarTexto" text="Numero da Porta" />
                              <TextField fx:id="campoRede" onMouseClicked="#apagarTexto" text="Rede" />
                              <TextField fx:id="campoMascara" onMouseClicked="#apagarTexto" text="Mascara" />
                              <TextField fx:id="campoInterface" onMouseClicked="#apagarTexto" text="Interface de saida (Porta)" />
                              <Button fx:id="botaoAdicionar" mnemonicParsing="false" onAction="#adicionarLinhaTabelaRoteamento" text="Adicionar" />
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Ver mensagens">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <VBox alignment="TOP_CENTER" layoutX="40.0" layoutY="56.0" prefHeight="272.0" prefWidth="480.0" spacing="10.0">
                           <children>
                              <TextArea fx:id="log" prefHeight="203.0" prefWidth="480.0" />
                              <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
                                 <children>
                                    <Button fx:id="botaoApagarLog" mnemonicParsing="false" onMouseClicked="#apagarLog" text="Apagar Mensagens" />
                                    <Button fx:id="botaoIniciarRoteador" mnemonicParsing="false" onAction="#iniciarRoteador" text="Iniciar Roteador" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
